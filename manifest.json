{
    "name": "ContexTweet",
    "version": "1.0",
    "description": "Context awareness tool based on Twitter data.",
    "permissions": ["http://localhost:65500/", "tabs", "activeTab", "declarativeContent", "storage"],
	"background": {
      "scripts": ["/libs/jquery-3.3.1.js", "background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Give context using Twitter",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "content_security_policy": "script-src 'self' https://platform.twitter.com/ https://cdn.syndication.twimg.com; object-src 'self'",
    "manifest_version": 2
  }